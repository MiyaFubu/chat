<div class="jumbotron">
  <h1>CreateUser</h1>
</div>
<%= form_for @user, url: users_path do |f| %>
<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">name:</label>
    <%= f.text_field :name,class: 'col-sm-5', placeholder: 'name' %><br>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">pass:</label>
    <%= f.text_field :password_digest,class: 'col-sm-5', placeholder: 'password' %><br>
  </div>
  <div class="form-group">
    <%= f.submit"CreateUser",class: 'col-sm-offset-2 col-sm-2 btn btn-primary' %><br>
  </div>
</form>
<% end %>
