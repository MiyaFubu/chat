<h1><%= @chat_room.chat_name %></h1>
<table>
  <tbody>
    <tr>
      <td>user_name</td>
      <td>content</td>
    </tr>
    <% @chats.each do |chat| %>
    <tr>
      <td><%= chat.user.name %></td>
      <td><%= chat.content %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= form_for Chat.new, url: chats_path + "?chat_room_id=#{@chat_room.id}"  do |f| %>
    <%=  f.text_field :content %><br>
    <%= f.submit %>
<% end %>
<%= link_to '一覧に戻る', chat_rooms_path %>
