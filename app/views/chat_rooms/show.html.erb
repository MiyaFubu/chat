<h1><%= @chat_room.chat_name %></h1>
<table>
  <tbody>
    <tr>
      <td>user_is</td>
      <td>content</td>
    </tr>
    <% @chats.each do |chat| %>
    <tr>
      <td><%= chat.user_id %></td>
      <td><%= chat.content %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= form_for Chat.new, url: chats_path + "?chat_room_id=#{@chat_room.id}"  do |f| %>
    <%=  f.text_field :user_id %><br>
    <%=  f.text_field :content %><br>
    <%= f.submit %>
<% end %>
<%= link_to 'new', new_chat_path %>
<%= link_to 'edit', edit_chat_path(@chats) %>
